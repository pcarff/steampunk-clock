<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    >
    <ImageView 
    	android:id="@+id/high_month"
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:src="@drawable/zeroam">
    </ImageView>
    <ImageView 
    	android:id="@+id/low_month"
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:src="@drawable/zeroam">
    </ImageView>
    <ImageView 
    	android:id="@+id/date_divider_high"
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:src="@drawable/divider_on">
    </ImageView>
    <ImageView 
    	android:id="@+id/high_day"
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:src="@drawable/zeroam">
    </ImageView>
    <ImageView 
    	android:id="@+id/low_day"
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:src="@drawable/zeroam">
    </ImageView>
    <ImageView 
    	android:id="@+id/date_divider_low"
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:src="@drawable/divider_on">
    </ImageView>
    <ImageView 
    	android:id="@+id/high_year"
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:src="@drawable/zeroam">
    </ImageView>
    <ImageView 
    	android:id="@+id/low_year"
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:src="@drawable/zeroam">
    </ImageView>
    
</LinearLayout>