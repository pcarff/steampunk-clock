<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	style="@style/SteamStyle"
	android:paddingTop="25dp"
  	android:gravity="center">
  	<TextView 
		android:id="@+id/current_title"
		android:layout_width="match_parent"
	   	android:layout_height="wrap_content"
	   	android:gravity="center"
	   	android:textColor="@color/font"
	   	android:background="@drawable/xlongtitleplate"
	   	android:text="@string/current_title"/>
  	<LinearLayout 
  	    android:orientation="horizontal"
		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  	    android:paddingTop="10dp">
  		<LinearLayout 
	  	    android:orientation="vertical"
			android:layout_width="wrap_content"
	  		android:layout_height="100dp">
	  		<TextView 
				android:id="@+id/temperature_title"
				android:layout_width="wrap_content"
			   	android:layout_height="wrap_content"
			   	android:gravity="center"
			   	android:textSize="10dp"
			   	android:textColor="@color/font"
			   	android:background="@drawable/medtitleplate"
			   	android:text="@string/temperature_title"/>
	  		<include layout="@layout/temperature_nixies"
	   		android:layout_width="wrap_content"
	  		android:layout_height="75dp"
	   		android:gravity="center"/>
	   	</LinearLayout>
	   	<LinearLayout 
	  	    android:orientation="vertical"
			android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
	  		android:gravity="center_horizontal">
	  		<TextView
			    android:id="@+id/today_title"
	    	   	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:textColor="@color/forecast"
		    	android:text="@string/today_title" 
		    	/>
		   	<ImageView 
		    	android:id="@+id/current_forecast"
		    	android:layout_width="wrap_content" 
		    	android:layout_height="wrap_content" 
		    	android:padding="10dp"
		    	android:src="@drawable/sunny">
		    </ImageView>
		</LinearLayout>
  	</LinearLayout>
   			      
</LinearLayout>
