<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView 
            android:id="@+id/day_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="@string/day_title"
            android:textColor="@color/forecast"
            android:textSize="20dp"/>
        <FrameLayout 
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <ImageView 
                android:id="@+id/day_background"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:src="@drawable/zeroam">
            </ImageView>
            <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/number_plate_sm">
                    
                <ImageView 
                    android:id="@+id/high_day"
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:src="@drawable/zeroam">
                </ImageView>
                <ImageView 
                    android:id="@+id/low_day"
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:src="@drawable/zeroam">
                </ImageView>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <View
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView 
            android:id="@+id/month_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="@string/month_title"
            android:textColor="@color/forecast"
            android:textSize="20dp"/>
	    <FrameLayout 
	        android:id="@+id/month"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	        <ImageView 
	            android:id="@+id/month_background"
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content" 
	            android:src="@drawable/zeroam">
	        </ImageView>
	        <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:orientation="horizontal"
	        android:gravity="center"
	        android:background="@drawable/number_plate_sm">               
	            <ImageView 
	                android:id="@+id/high_month"
	                android:layout_width="wrap_content" 
	                android:layout_height="wrap_content" 
	                android:src="@drawable/zeroam">
	            </ImageView>
	            <ImageView 
	                android:id="@+id/low_month"
	                android:layout_width="wrap_content" 
	                android:layout_height="wrap_content" 
	                android:src="@drawable/zeroam">
	            </ImageView>
	        </LinearLayout>
	    </FrameLayout>
     </LinearLayout>
    <View
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView 
            android:id="@+id/year_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="@string/year_title"
            android:textColor="@color/forecast"
            android:textSize="20dp"/>
	    <FrameLayout 
	        android:id="@+id/year"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center" >
	        <ImageView 
	            android:id="@+id/year_background"
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content" 
	            android:src="@drawable/zeroam">
	        </ImageView>
	        <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:orientation="horizontal"
	        android:gravity="center"
	        android:background="@drawable/number_plate_sm">
	                
	            <ImageView 
	                android:id="@+id/high_year"
	                android:layout_width="wrap_content" 
	                android:layout_height="wrap_content" 
	                android:src="@drawable/zeroam">
	            </ImageView>
	            <ImageView 
	                android:id="@+id/low_year"
	                android:layout_width="wrap_content" 
	                android:layout_height="wrap_content" 
	                android:src="@drawable/zeroam">
	            </ImageView>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>    
</LinearLayout>

